<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".client.ui.client.order.DetailOrderActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@null"
                android:backgroundTint="@color/brown_gold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="button back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Order"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown_gold"
                app:layout_constraintStart_toStartOf="@id/btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_back"
                app:layout_constraintBottom_toBottomOf="@id/btn_back"/>

            <LinearLayout
                android:id="@+id/box_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                app:layout_constraintStart_toStartOf="@id/btn_back">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tailor Name"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_tailor_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tampan"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="80dp"
                app:layout_constraintTop_toTopOf="@id/box_name"
                app:layout_constraintStart_toEndOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/box_name"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tailor Phone"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_tailor_phone"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="62123456789012"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/box_phone"
                app:layout_constraintBottom_toBottomOf="@id/box_phone"
                app:layout_constraintStart_toStartOf="@id/box_gender">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-08-2023"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/box_phone">
                <ImageView
                    android:id="@+id/img_user_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    tools:src="@tools:sample/avatars"
                    android:src="@drawable/dummy_photo"
                    android:contentDescription="User model" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/box_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shirts (Short)"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/box_service"
                app:layout_constraintBottom_toBottomOf="@id/box_service"
                app:layout_constraintStart_toStartOf="@id/box_gender">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_clothing_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/box_service"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clothing Color"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_clothing_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_clothing_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/box_clothing_color"
                app:layout_constraintBottom_toBottomOf="@id/box_clothing_color"
                app:layout_constraintStart_toStartOf="@id/box_gender">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clothing Size"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_clothing_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X3L"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/box_clothing_color"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_estimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/box_qty"
                app:layout_constraintBottom_toBottomOf="@id/box_qty"
                app:layout_constraintStart_toStartOf="@id/box_gender">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimation"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_estimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Days"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/box_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/box_qty"
                app:layout_constraintStart_toStartOf="@id/box_name"
                app:layout_constraintEnd_toEndOf="@id/cardView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tailor's Feedback"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/noteEditTextLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/brown_gold">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/noteEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="top|start"
                        android:textColor="@color/brown_gold"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:textColorHint="@color/brown_gold"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:text="Bagus modelnya inshaallah bisa diselesaikan dalam 3 hari"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/border_edit_text"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/box_feedback"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price (Pcs)"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 150 K"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/box_price"
                app:layout_constraintBottom_toBottomOf="@id/box_price"
                app:layout_constraintStart_toStartOf="@id/box_gender">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Order Price"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 1.150 K"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/box_price"
                app:layout_constraintStart_toStartOf="@id/box_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Please pick up during store hours"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Approve"
                android:textColor="@color/white"
                android:visibility="visible"
                android:background="@drawable/bg_button_primary"
                app:layout_constraintStart_toEndOf="@id/btn_rejected"
                app:layout_constraintEnd_toEndOf="@id/box_feedback"
                app:layout_constraintTop_toTopOf="@id/btn_rejected"
                app:layout_constraintBottom_toBottomOf="@id/btn_rejected"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_rejected"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Reject"
                android:textColor="@color/brown_gold"
                android:visibility="visible"
                android:background="@drawable/bg_button_secondary"
                app:layout_constraintTop_toBottomOf="@id/box_note"
                app:layout_constraintEnd_toStartOf="@id/btn_approve"
                app:layout_constraintStart_toStartOf="@id/btn_back"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>