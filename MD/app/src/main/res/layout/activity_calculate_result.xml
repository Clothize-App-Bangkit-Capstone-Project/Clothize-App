<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.ui.client.measurements.CalculateResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/title_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/calculating_result"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textColor="@color/brown_gold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/title_calculate">
                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    tools:src="@tools:sample/avatars"
                    android:contentDescription="@string/user_photo" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/box_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/cardView"
                app:layout_constraintEnd_toStartOf="@id/box_size">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jenis_pakaian"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_clothes_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kemeja"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toEndOf="@id/box_type">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ukuran_pakaian"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_clothes_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xl"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/box_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/box_type"
                app:layout_constraintStart_toStartOf="@id/box_type">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/gender"
                    android:textColor="@color/brown_gold"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_clothes_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hasil_perhitungan_cm"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/brown_gold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/cardView"
                app:layout_constraintTop_toBottomOf="@id/box_gender"
                />


            <LinearLayout
                android:id="@+id/box_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_result"
                app:layout_constraintStart_toStartOf="@id/cardView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chest_girth"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_chest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_lbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_result"
                app:layout_constraintStart_toStartOf="@id/box_size">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_girth"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_lbody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_pbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/box_chest"
                app:layout_constraintStart_toStartOf="@id/cardView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/body_length"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_pbody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_shoulder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/box_chest"
                app:layout_constraintStart_toStartOf="@id/box_size">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shoulder_width"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/brown_gold"
                    />
                <TextView
                    android:id="@+id/tv_shoulder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/brown_gold"
                    />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/save"
                android:textColor="@color/white"
                android:visibility="visible"
                android:background="@drawable/bg_button_primary"
                app:layout_constraintStart_toEndOf="@id/btn_cancel"
                app:layout_constraintEnd_toEndOf="@id/cardView"
                app:layout_constraintTop_toTopOf="@id/btn_cancel"
                app:layout_constraintBottom_toBottomOf="@id/btn_cancel"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/cancel"
                android:textColor="@color/brown_gold"
                android:visibility="visible"
                android:background="@drawable/bg_button_secondary"
                app:layout_constraintTop_toBottomOf="@id/box_pbody"
                app:layout_constraintEnd_toStartOf="@id/btn_save"
                app:layout_constraintStart_toStartOf="@id/box_pbody"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
